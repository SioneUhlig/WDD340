<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="account-management">
  <% if (locals.accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    
    <div class="management-links" style="margin-top: 30px;">
      <h3>Account Actions</h3>
      <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>
      <p><a href="/inquiry/my-inquiries">View My Inquiries</a></p>
    </div>
    
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <div class="management-links" style="margin-top: 30px;">
        <h3>Employee Tools</h3>
        <p><a href="/inv/">Manage Inventory</a></p>
        <p><a href="/inquiry/inbox">Customer Inquiries Inbox</a></p>
      </div>
    <% } %>
  <% } else { %>
    <p>Please log in to view your account information.</p>
  <% } %>
</div>